extends ../layout

block content
  body
    h1 程氏星辉 新闻列表页
    .container(style="margin-bottom:60%;")
      .row
        table.table.table-hover.table-bordered
          thead
            tr
              th 新闻标题
              th 月日
              th 年
              th 录入时间
              th 查看
              th 更新
              th 删除
          tbody
            each item in news
              tr(class="item-id-#{item._id}")
                td #{item.title}
                td #{item.mouth}
                td #{item.year}
                td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                td: a(target="_black",href="/new1/#{item._id}") 查看
                td: a(target="_black",href="../news/update/#{item._id}") 修改
                td
                  button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
    script(src="/js/admin.js")